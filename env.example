DEEPGRAM_API_KEY=
OPENROUTER_API_KEY=
# Example: openai/gpt-4.1-mini
OPENROUTER_MODEL=openai/gpt-4.1-mini
# Optional (recommended by OpenRouter)
OPENROUTER_SITE_URL=
OPENROUTER_APP_NAME=fathom

SUPABASE_URL=
# Safe to expose publicly (client-side). Used together with a user's JWT to enforce RLS.
SUPABASE_PUBLISHABLE_KEY=
# Server-only secret key. Bypasses RLS. NEVER expose publicly.
SUPABASE_SECRET_KEY=
SUPABASE_BUCKET=fathom
SUPABASE_SIGNED_URL_TTL_SECONDS=3600

# Best-practice guardrails (optional)
CORS_ALLOW_ORIGINS=
RATE_LIMIT_REQUESTS=
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_MAX_IPS=10000
RATE_LIMIT_IDLE_SECONDS=1800
JOB_STATUS_POLL_INTERVAL_SECONDS=2
MAX_REQUEST_BYTES=64000
MAX_DURATION_SECONDS=14400
YOUTUBE_ALLOW_HOSTS=youtube.com,www.youtube.com,m.youtube.com,youtu.be,music.youtube.com

# Worker settings (optional)
WORKER_POLL_INTERVAL_SECONDS=2
WORKER_IDLE_SLEEP_SECONDS=5
WORKER_MAX_ATTEMPTS=3
WORKER_BACKOFF_BASE_SECONDS=5
WORKER_STALE_AFTER_SECONDS=900
