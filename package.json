{
  "name": "fathom",
  "private": true,
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev:web": "pnpm --filter @fathom/web dev",
    "build:web": "pnpm --filter @fathom/web build",
    "start:web": "pnpm --filter @fathom/web start",
    "lint:web": "pnpm --filter @fathom/web lint",
    "typecheck:web": "pnpm --filter @fathom/web typecheck",
    "generate:api-client": "pnpm --filter @fathom/api-client generate"
  },
  "pnpm": {
    "overrides": {
      "minimatch@^10.0.0": "10.2.3",
      "minimatch@^9.0.0": "9.0.7",
      "minimatch@^5.0.0": "5.1.8",
      "minimatch@^3.0.0": "3.1.4",
      "ajv@^8.0.0": "8.18.0"
    }
  }
}
